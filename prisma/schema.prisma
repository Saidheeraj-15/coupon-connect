// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  passwordHash  String?   @map("password_hash")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")
  
  // Profile fields
  credits       Int       @default(0)
  reputation    Int       @default(0)
  couponsOffered Coupon[]     @relation("CouponOwner")
  tradesInitiated Trade[]     @relation("TradeRequester")
  tradesReceived Trade[]      @relation("TradeReceiver")
  
  transactionsAsBuyer Transaction[] @relation("BuyerTx")
  transactionsAsSeller Transaction[] @relation("SellerTx")
  accounts       Account[]
  sessions       Session[]
}
model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([provider, providerAccountId])
}
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  @@unique([identifier, token])
}
model Category {
  id      String   @id @default(cuid())
  name    String   @unique
  brands  Brand[]
  coupons Coupon[]
}
model Brand {
  id         String   @id @default(cuid())
  name       String
  categoryId String   @map("category_id")
  category   Category @relation(fields: [categoryId], references: [id])
  coupons    Coupon[]
}
model Coupon {
  id          String   @id @default(cuid())
  title       String
  description String?
  price       Int      @default(0) // Cost in credits
  code        String   // The secret code (masked by default)
  
  expiryDate  DateTime? @map("expiry_date")
  imageUrl    String?  @map("image_url")
  status      String   @default("available") // available, sold, redeemed, traded, expired
  
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  ownerId     String @map("owner_id")
  owner       User   @relation("CouponOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  categoryId  String? @map("category_id")
  category    Category? @relation(fields: [categoryId], references: [id])
  brandId     String? @map("brand_id")
  brand       Brand? @relation(fields: [brandId], references: [id])
  tradesAsRequested Trade[] @relation("RequestedCoupon")
  tradesAsOffered   Trade[] @relation("OfferedCoupon")
  transactions      Transaction[]
}
model Trade {
  id        String   @id @default(cuid())
  status    String   @default("pending") // pending, accepted, rejected, completed
  message   String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  requesterId  String @map("requester_id")
  requester    User   @relation("TradeRequester", fields: [requesterId], references: [id], onDelete: Cascade)
  receiverId String @map("receiver_id")
  receiver   User   @relation("TradeReceiver", fields: [receiverId], references: [id], onDelete: Cascade)
  requestedCouponId String @map("requested_coupon_id")
  requestedCoupon   Coupon @relation("RequestedCoupon", fields: [requestedCouponId], references: [id], onDelete: Cascade)
  offeredCouponId String @map("offered_coupon_id")
  offeredCoupon   Coupon @relation("OfferedCoupon", fields: [offeredCouponId], references: [id], onDelete: Cascade)
}
model Transaction {
  id        String   @id @default(cuid())
  amount    Int // Credits moved
  createdAt DateTime @default(now()) @map("created_at")
  buyerId   String @map("buyer_id")
  buyer     User   @relation("BuyerTx", fields: [buyerId], references: [id])
  sellerId  String @map("seller_id")
  seller    User   @relation("SellerTx", fields: [sellerId], references: [id])
  couponId  String @map("coupon_id")
  coupon    Coupon @relation(fields: [couponId], references: [id])
}
